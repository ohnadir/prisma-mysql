generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
  SUPER_ADMIN
}

model FcmToken {
  id     Int    @id @default(autoincrement())
  token  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id             Int        @id @default(autoincrement())
  name           String
  role           Roles
  email          String    @unique
  contact        String?
  password       String
  location       String?
  profile        String?    @default("https://res.cloudinary.com/dzo4husae/image/upload/v1733459922/zfyfbvwgfgshmahyvfyk.png")
  verified       Boolean    @default(false)
  fcmToken       FcmToken[]
  authentication Json?

  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}