generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Roles {
  USER
  ADMIN
  SUPER_ADMIN
}

model FcmToken {
  id        Int    @id @default(autoincrement())
  token     String
  user      Int
  createdAt DateTime @default(now())
  @@unique([user, token])
  @@index([user])
  @@map("fcm_tokens")
}

model User {
  id             Int     @id @default(autoincrement())
  name           String
  role           Roles
  email          String  @unique
  contact        String?
  password       String
  location       String?
  profile        String? @default("https://res.cloudinary.com/dzo4husae/image/upload/v1733459922/zfyfbvwgfgshmahyvfyk.png")
  verified       Boolean @default(false)
  authentication Json?

  // Relations
  rooms          Room[] @relation("RoomParticipants")
  sentMessages   Message[]  @relation("MessageSender")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([email, id])
}

model Banner {
  id        Int      @id @default(autoincrement())
  image     String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Faq {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id           Int      @id @default(autoincrement())
  participants User[]   @relation("RoomParticipants")
  messages     Message[] @relation("RoomMessages")
  status       Boolean  @default(true)
  @@map("rooms")
}

// Message model
model Message {
  id        Int      @id @default(autoincrement())

  roomId    Int
  room      Room     @relation("RoomMessages", fields: [roomId], references: [id], onDelete: Cascade)

  senderId  Int
  sender    User     @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  text      String?  @db.Text
  image     String?  @db.VarChar(500)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([roomId])
  @@index([senderId])
  @@map("messages")
}